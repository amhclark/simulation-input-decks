{
  "name": "simulation-input-decks",
  "displayName": "Simulation Input Decks",
  "description": "Support for simulation input deck files (`.fem` and `.rad`), featuring customizable rulers for precise formatting",
  "version": "0.0.6",
  "publisher": "aidan-clark",
  "repository": {
    "type": "git",
    "url": "https://github.com/amhclark/simulation-input-decks"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "fem",
    "rad",
    "simulation",
    "rulers",
    "formatting"
  ],
  "activationEvents": [
    "onLanguage:fem",
    "onLanguage:rad",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fem",
        "extensions": [".fem"],
        "configuration": "./fem-language-configuration.json"
      },
      {
        "id": "rad",
        "extensions": [".rad"],
        "configuration": "./rad-language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "simulationInputDecks.updateRulers",
        "title": "Update Rulers"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
